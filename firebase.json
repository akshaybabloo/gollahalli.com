{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=0, no-cache"
        }]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|ico)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=864000"
        }]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=864000"
        }]
      },
      {
        "source": "404.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=864000"
        }]
      }
    ]
  }
}
